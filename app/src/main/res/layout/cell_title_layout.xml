<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:squint="http://schemas.android.com/tools"
    android:background="@color/bgContent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <!-- LEFT TITLE PART -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="100dp">

            <com.intrusoft.squint.DiagonalView
                android:id="@+id/diagonal1"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                squint:diagonalDirection="bottom_to_top"
                squint:angle="30"
                squint:solidColor="@color/colorAccent"
                diagonal:solidColor="@color/colorAccent"
                diagonal:diagonalDirection="top_to_bottom"
                android:layout_height="160dp">
            </com.intrusoft.squint.DiagonalView>
            <TextView
                android:id="@+id/goal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_alignParentLeft="false"
                android:text="50%"
                android:layout_centerInParent="false"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />


    </RelativeLayout>
    <!-- RIGHT TITLE PART -->
    <GridLayout android:columnCount="2"
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/bgTitleRight"
        >

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="wrap_content" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:src="@mipmap/income_icon"/>
                    <TextView
                        android:id="@+id/income_label_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="false"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:text="45k"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout android:layout_column="1" android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:src="@mipmap/expenses"/>
                    <TextView
                        android:id="@+id/expenditure_label_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:text="45k"
                        android:layout_gravity="center"
                        android:gravity="right" />
                </LinearLayout>



                <LinearLayout android:layout_row="1" android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:src="@mipmap/charity_icon"/>
                    <TextView
                        android:id="@+id/charity_label_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:text="45k"
                        android:layout_gravity="center"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout android:layout_column="1" android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:src="@mipmap/savings_icon"/>
                    <TextView
                        android:id="@+id/savings_label_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:text="45k"
                        android:layout_gravity="center"
                        android:gravity="right" />
                </LinearLayout>


    </GridLayout>

    <TextView
        android:id="@+id/date_label"
        android:layout_width="40dp"
        android:layout_height="wrap_content" android:text="Jan 2017"
        android:gravity="top|right"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:singleLine="false" />
</LinearLayout>