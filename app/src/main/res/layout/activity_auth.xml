<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false">

    <TextView
        android:layout_height="24dp"
        android:layout_width="match_parent"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >

        <ImageButton
            android:id="@+id/sign_in_facebook"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/first_button_background"
            android:src="@mipmap/facebook"/>

        <ImageButton
            android:id="@+id/sign_in_google"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/second_button_background"
            android:src="@mipmap/google_icon"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/sign_in_email"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@drawable/third_button_selector"
             />
    </LinearLayout>



    <TextView
        android:layout_height="24dp"
        android:layout_width="match_parent"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@drawable/first_button_background"
            android:src="@mipmap/facebook"
            app:backgroundTint="@drawable/first_button_background"
            app:elevation="13dp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal">

        </android.support.v7.widget.AppCompatImageButton>
        <android.support.v7.widget.AppCompatButton
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@drawable/second_button_background"
            app:backgroundTint="@drawable/second_button_background"
            />
        <android.support.v7.widget.AppCompatButton
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@drawable/third_button_selector"
            app:backgroundTint="@drawable/third_button_selector"
            />
    </LinearLayout>

</LinearLayout>